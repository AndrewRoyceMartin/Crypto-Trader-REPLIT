{
  "name": "trading-system",
  "description": "Algorithmic Trading System with ATO Tax Compliance - Python Flask app with real-time crypto portfolio management",
  "version": "1.0.0",
  "main": "app.py",
  "scripts": {
    "start": "python app.py",
    "wsgi": "gunicorn -c gunicorn.conf.py wsgi:application",
    "dev": "python web_interface.py"
  },
  "health_checks": {
    "endpoints": [
      {
        "path": "/",
        "expected_status": 200,
        "timeout": 30,
        "method": "GET",
        "headers": {"Accept": "application/json"}
      },
      {
        "path": "/health", 
        "expected_status": 200,
        "timeout": 10
      },
      {
        "path": "/ready",
        "expected_status": 200,
        "timeout": 15
      }
    ]
  },
  "environment": {
    "PORT": "5000",
    "FLASK_ENV": "production",
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  },
  "deployment": {
    "platform": "replit",
    "runtime": "python3.11",
    "port_mapping": {
      "internal": 5000,
      "external": 80
    },
    "startup_timeout": 60,
    "memory_limit": "512Mi",
    "cpu_limit": "500m"
  },
  "autoscaling": {
    "enabled": true,
    "min_instances": 1,
    "max_instances": 3,
    "target_cpu_percent": 70
  }
}